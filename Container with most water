class Solution {
    public int maxArea(int[] height) {
        int l=0;
        int r=hight.length-1;
        int max=0;
        while(l<r){
            int lh=hight[l];
            int rh=hight[r];
            int min_h=Math.min(lh,rh);
            max=Math.max(max,min_h*(r-1));
            if(lh<rh) l++;
            else r--;
            
        }
        retun max;
        
    }
}
